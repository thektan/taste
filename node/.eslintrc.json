{
  "extends": ["prettier"],
  "env": {
    "browser": true,
    "node" : true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "class-methods-use-this": ["error", {
        "exceptMethods": [
          "render",
          "attached"
        ]
      }
    ]
  }
}
